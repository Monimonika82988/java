import java.util.*;
class SnakePattern{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt(),num=1;
        for(int i=1;i<=n;i++){
            if(i%2!=0) for(int j=1;j<=n;j++) System.out.print(num++ +" ");
            else {int t=num+n-1; for(int j=1;j<=n;j++) System.out.print(t-- +" "); num+=n;}
            System.out.println();
        }
    }
}
