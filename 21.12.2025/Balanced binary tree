class Solution {
    public boolean ans;
    public boolean isBalanced(TreeNode root) {
        ans = true;
        levels(root);
        return ans;
    }
    private int levels(TreeNode root){
        if(root == null) return 0; 
        int left = levels(root.left) ;
        int right =  levels(root.right);
        if(Math.abs(left - right) > 1){
            ans =  false;
            return 0;
        }
        return 1 + Math.max(left,right);
    }
}
